<div class="{{classes}}" data-courseid="{{courseid}}" data-type="{{data-type}}">
    <div class="snap-home-course">
        <!--Card content-->
        {{{hiddeninfobadge}}}
        <a href="{{courselink}}" title="{{coursename}}">
            <div class="{{imageclasses}}" style="{{imagestyle}}"></div>
        </a>
        <div class="card-header row">
            <a class="snap-home-course-title col-xl-10 col-lg-10 col-md-6 col-sm-6 col-6"" href="{{courselink}}" title="{{coursename}}">
                <span class="">{{coursename}}</span>
            </a>
            <i type="button" class="fa-solid fa-circle-info more-info col-xl-2 col-lg-2 col-md-6 col-sm-6 col-6"" data-toggle="modal" data-target="#coursemodal{{courseid}}"></i>
        </div>
    </div>
    {{> theme_snap/course_card_modal }}
</div>
