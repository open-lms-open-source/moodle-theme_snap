<div class="modal fade snap-home-course-card" id="coursemodal{{courseid}}" tabindex="-1">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-body">
         <div class="snap-home-courses-image" style="background-image: url('{{courseimage}}');">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <div class="bottom-image-options">
                <a class="btn btn-primary courselink" role="button" href="{{courselink}}" title="{{#str}} courselink, theme_snap {{/str}}">
                    {{#str}} courselink, theme_snap {{/str}}
                </a>
                {{#isloggedin}}
                <span class="studentsinfo"><i class="fa-regular fa-circle-user"></i> {{enrolledstudents}}</span>
                {{/isloggedin}}
            </div>
         </div>
         <div class="hiddeninfo d-block">
            {{{hiddeninfobadge}}}
         </div>
         <span class="card-title">
            {{coursename}}
         </span>
         {{{coursecategoryname}}}
         <div class="row course-info {{#hassummary}}hassummary{{/hassummary}}">
            {{#hassummary}}
            <div class="col-sm-6 summary-info">
                {{{coursesummary}}}
            </div>
            <div class="col-sm-6 additional-info">
                {{{coursecontacts}}}
                {{{coursecustomfields}}}
            </div>
            {{/hassummary}}
            {{^hassummary}}
            <div class="col-sm-12 additional-info">
                {{{coursecontacts}}}
                {{{coursecustomfields}}}
            </div>
            {{/hassummary}}
         </div>
      </div>
    </div>
  </div>
</div>
